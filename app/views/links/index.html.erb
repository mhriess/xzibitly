<% @links.each do |link| %>

  <div class="link">
    <p><%= link.title %> | <%= link.url %> | <%= link.shortened_link%> clicks: <%= link.counter %></p>
    <p>
      <%= link_to 'Show', link %> |
      <%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
    <hr>
  </div>
<% end %>